            <h3>Order by:</h3>


            
            
            <table>
                <tr>                    
                    <th>
                        @Html.ActionLink(" ID  ", "Index", new { sortOrder = ViewBag.IDSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Manager Name", "Index", new { sortOrder = ViewBag.ManagerSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Customer Name", "Index", new { sortOrder = ViewBag.CustomerSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Product Name", "Index", new { sortOrder = ViewBag.ProductSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Amount", "Index", new { sortOrder = ViewBag.AmountSortParm })
                    </th>
                    <th>
                        @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSortParm })
                    </th>
                </tr>

                <tr>                    
                <h3>ORDERS:</h3>
                </tr>
<tr>
                    <td><p>Order ID</p></td>
                    <td><p>Manager name</p></td>
                    <td><p>Customer name</p></td>
                    <td><p>Product name</p></td>
                    <td><p>Product amount</p></td>                    
                    <td><p>Order date</p></td>
                    <td></td>
                </tr>
                @foreach (var b in ViewBag.Orders)
                {
                    <tr>
                        <td><p>@b.OrderID</p></td>
                        <td><p>@b.ManagerName</p></td>
                        <td><p>@b.CustomerName</p></td>
                        <td><p>@b.ProductName</p></td>
                        <td><p>@b.Amount</p></td>
                        <td><p>@b.Date</p></td>
                        <td><p><a href="/Home/EditRecord/@b.OrderID">Edit record</a></p></td>
                    </tr>
                }
            </table>
        </div>

    </section>
}
